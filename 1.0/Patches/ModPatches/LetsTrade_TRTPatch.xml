<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- ========== Patch - Alter Outlander Base Market ========== -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Let's Trade! [1.0]</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/TraderKindDef[defName = "Base_Outlander_Standard"]/stockGenerators</xpath>
                <value>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTSlag</categoryDef>
                        <price>Cheap</price>
                        <thingDefCountRange>
                            <min>1</min>
                            <max>2</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>2</min>
                            <max>4</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTChunks</categoryDef>
                        <price>Cheap</price>
                        <thingDefCountRange>
                            <min>3</min>
                            <max>3</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>3</min>
                            <max>5</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_Category">
                        <categoryDef>StoneBlocks</categoryDef>
                        <price>Cheap</price>
                        <thingDefCountRange>
                            <min>2</min>
                            <max>3</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>50</min>
                            <max>100</max>
                        </countRange>
                    </li>
                </value>
            </li>
            
            <li Class="PatchOperationAdd">
                <xpath>/Defs/TraderKindDef[defName = "Base_Neolithic_Standard"]/stockGenerators</xpath>
                <value>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTSlag</categoryDef>
                        <price>Cheap</price>
                        <thingDefCountRange>
                            <min>1</min>
                            <max>2</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>1</min>
                            <max>3</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTChunks</categoryDef>
                        <price>Cheap</price>
                        <thingDefCountRange>
                            <min>3</min>
                            <max>3</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>4</min>
                            <max>6</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_Category">
                        <categoryDef>StoneBlocks</categoryDef>
                        <price>Cheap</price>
                        <thingDefCountRange>
                            <min>2</min>
                            <max>3</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>75</min>
                            <max>125</max>
                        </countRange>
                    </li>
                </value>
            </li>
            
            <li Class="PatchOperationAdd">
                <xpath>/Defs/TraderKindDef[defName = "Orbital_Mining"]/stockGenerators</xpath>
                <value>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTSlag</categoryDef>
                        <thingDefCountRange>
                            <min>1</min>
                            <max>4</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>5</min>
                            <max>8</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTChunks</categoryDef>
                        <thingDefCountRange>
                            <min>5</min>
                            <max>10</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>10</min>
                            <max>15</max>
                        </countRange>
                    </li>
                </value>
            </li>
            
            <li Class="PatchOperationAdd">
                <xpath>/Defs/TraderKindDef[defName = "Caravan_Outlander_Mining"]/stockGenerators</xpath>
                <value>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTSlag</categoryDef>
                        <thingDefCountRange>
                            <min>0</min>
                            <max>1</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>2</min>
                            <max>8</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTChunks</categoryDef>
                        <thingDefCountRange>
                            <min>1</min>
                            <max>2</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>3</min>
                            <max>6</max>
                        </countRange>
                    </li>
                </value>
            </li>
            
            <li Class="PatchOperationAdd">
                <xpath>/Defs/TraderKindDef[defName = "Caravan_Neolithic_Mining"]/stockGenerators</xpath>
                <value>
                    <li Class="StockGenerator_Category">
                        <categoryDef>TRTChunks</categoryDef>
                        <thingDefCountRange>
                            <min>1</min>
                            <max>3</max>
                        </thingDefCountRange>
                        <countRange>
                            <min>5</min>
                            <max>6</max>
                        </countRange>
                    </li>
                </value>
            </li>
        </operations>
		</match>
    </Operation>


    <!-- === Code for 'The Rock Trade' by EarthyTurtle. === -->
    <!-- === This label is actually just so I don't accidently place anything after the Patch tag. :P === -->
</Patch>
